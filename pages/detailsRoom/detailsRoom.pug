include /pages/ui-kit_headerFooter/header.pug
include /pages/ui-kit_headerFooter/footer.pug

include /blocks/elements/infoBlock/infoBlock.pug
include /blocks/elements/commentBlock/commentBlock.pug
include /blocks/elements/like/like.pug
include /blocks/elements/listBlock/listBlock.pug

include /blocks/cards/formReservation/formReservation.pug
include /blocks/elements/dropdown/dropdownBlock.pug
include /blocks/elements/dropdown/dropdownDates.pug
include /blocks/elements/link/link.pug
include /blocks/cards/calendar/calendar.pug


+header(0)

div.content.room
  div.room_blockImages
    div.room_blockImages_col1
      div.room_blockImages_col1_image
    div.room_blockImages_col2
      div.room_blockImages_col2_image.room_blockImages_col2_image__1
      div.room_blockImages_col2_image.room_blockImages_col2_image__2
  div.content_container
    div.room_blockInfo
      +infoBlock(
        {
          topic : "Сведения о номере",
          qtyHR : 2
        },
        {
          label : "Комфорт",
          text : "Шумопоглощающие стены",
          url : "blocks/elements/infoBlock/emoticon.svg",
          dopclass : "info-block__icon_emoticon"
        },
        {
          label : "Удобство",
          text : "Окно в каждой из спален",
          url : "blocks/elements/infoBlock/city.svg",
          dopclass : "info-block__icon_city"
        },
        {
          label : "Уют",
          text : "Номер оснащён камином",
          url : "blocks/elements/infoBlock/whatshot.svg",
          dopclass : "info-block__icon_whatshot"
        }
      )

      div.room_blockInfo_impression
        h2 Впечатления от номера
        div.room_blockInfo_impression_text 
          p.room_blockInfo_impression_text_num 260
          p.room_blockInfo_impression_text_text голосов
        canvas(id="oilChart" width="290" height="150")

      +commentBlock("Отзывы посетителей номера", "2 отзыва",
        {
          urlImg: "pages/detailsRoom/photo1.png",
          liked : true,
          qty : 12,
          name : "Мурад Сарафанов",
          time : "5 дней назад",
          text : `Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.`
        },
        {
          urlImg: "pages/detailsRoom/photo2.png",
          liked : false,
          qty : 2,
          name : "Патрисия Стёклышкова",
          time : "Неделю назад",
          text : `Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент.`
        }
        )
      
      +listBlock(
        {
          topic : "Правила",
          tagTopic : "h2"
        },
        {
          text : "Нельзя с питомцами"
        },
        {
          text : "Без вечеринок и мероприятий"
        },
        {
          text : "Время прибытия — после 13:00, а выезд до 12:00"
        }
      )
      
      div.room_blockInfo_cancel
        h2 Отмена
        p Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
    div.room_formReservation
      +formReservation(888,"9 990","38 081")

+footer

script(src="/pages/detailsRoom/chart.js")