include ~@Blocks/dropdown/dropdown.pug
include ~@Blocks/dropdown-dates/dropdown-dates.pug
include ~@Blocks/button/button.pug

mixin formSearchNum
  form.form-search-num(action='./link-stub')
    h1.form-search-num__topic Найдём номера под ваши пожелания
    .form-search-num__dropdown-dates
      +dropdownDates(
        {
          items : [
            { 
              topic : "Прибытие",
            },
            { 
              topic : "Выезд",
            }
          ]
        }
      ) 

    +dropdown(
      { 
        name : "guests",
        topic : "Гости",
        activeText : "Сколько гостей",
        items : [
          {
            text : "взрослые",
            number : 2,
          },
          {
            text : "дети",
            number : 1,
          },
          {
            text : "младенцы",
          }
        ]
      }
    )

    .form-search-num__button
      +button(
        {
          text : 'подобрать номер',
          typeButton : 'submit',
        }
      )