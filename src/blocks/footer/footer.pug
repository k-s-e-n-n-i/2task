include ~@Blocks/btn/btn.pug
include ~@Blocks/input-text/input-text.pug
include ~@Blocks/social/social.pug

mixin footer({ items = [{}] })
  footer.footer
    .footer__block-menu
      .footer__content-container
        .footer__logo-block
          img.footer__logo(src=require("@Blocks/footer/img/logo.svg").default alt="logo")
          p Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»

        ul.footer__footer-menu
          each column in items
            li.footer__menu-column
              ul.footer__menu-list
                each itemLink in column
                  - let link = itemLink.link || './link-stub'
                  li.footer__menu-li
                    a.footer__menu-a(href=link)= itemLink.text

        .footer__subscription
          p.footer__subscription-topic Подписка
          p.footer__subscription-text Получайте специальные предложения и новости сервиса
          .footer__subscription-input
            +inputText(
              {
                placeholder : "Email",
                id : "inputFooter",
                type : "subscription",
              }
            )

    .footer__copyright-block
      .footer__copyright-content
        p Copyright © 2018 Toxin отель. Все права защищены.
        +social(
          {
            items : [
              {
                name : 'twitter',
                icon : require('@Blocks/social/img/twitter.svg').default,
              },
              {
                name : 'facebook',
                icon : require('@Blocks/social/img/facebook.svg').default,
              },
              {
                name : 'instagram',
                icon : require('@Blocks/social/img/instagram.svg').default,
              }
            ]
          }
        )