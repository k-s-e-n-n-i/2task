include ~@Blocks/input-text/input-text.pug
include ~@Blocks/button/button.pug
include ~@Blocks/button-with-arrow/button-with-arrow.pug

mixin formSignIn
  form.form-sign-in(action='./link-stub')
    h1.form-sign-in__topic Войти
    .form-sign-in__input-text
      +inputText(
        {
          placeholder : "Email",
          id : "SignInEmail",
        }
      )
    .form-sign-in__input-text
      +inputText(
        {
          placeholder : "Пароль",
          id : "SignInPassword",
        }
      )

    .form-sign-in__btn
      +buttonArrow(
        {
          text : "Войти",
        }
      )

    .form-sign-in__login
      p.form-sign-in__login-text Нет аккаунта на Toxin?
      .form-sign-in__btn.form-sign-in__btn_border
        +button(
          {
            text : "Создать",
            hasBorder: true,
          }
        )