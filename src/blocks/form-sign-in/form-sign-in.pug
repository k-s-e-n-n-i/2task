include ~@Blocks/input-text/input-text.pug
include ~@Blocks/btn/btn.pug

mixin formSignIn
  form.form-sign-in
    h1 Войти
    .form-sign-in__input-text
      +inputText(
        {
          topic : "",
          label : "",
          placeholder : "Email",
          inputText : "",
          state : "",
          id : "SignInEmail",
          name : ""
        }
      )
    .form-sign-in__input-text
      +inputText(
        {
          topic : "",
          label : "",
          placeholder : "Пароль",
          inputText : "",
          state : "",
          id : "SignInPassword",
          name : ""
        }
      )

    .form-sign-in__btn
      +btn(
        {
          text : "Войти",
          arrow : true,
        }
      )

    .form-sign-in__login
      p Нет аккаунта на Toxin?
      .form-sign-in__btn.form-sign-in__btn_border
        +btn(
          {
            text : "Создать",
            border: true,
          }
        )