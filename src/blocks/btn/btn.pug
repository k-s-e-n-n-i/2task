mixin btn(obj)
  - let arrow = 'btn__block_gradient_arrow '
  - let hover = 'btn_hover '
  - let btn__border_hover
  case obj.arrow
    when true
      case obj.hover
        when true
          - arrow = 'btn__block_gradient_arrow '
          - hover = 'btn_hover '
          - btn__border_hover = 'btn__border_hover '
        when false
          - arrow = 'btn__block_gradient_arrow '
          - hover = ''
          - btn__border_hover = ''
    when false
      case obj.hover
        when true
          - arrow = ''
          - hover = 'btn_hover '
          - btn__border_hover = 'btn__border_hover '
        when false
          - arrow = ''
          - hover = ''
          - btn__border_hover = ''
    default
      - arrow = ''
      - hover = ''
      - btn__border_hover = ''

  if obj.border == true
    div(class="btn btn_border ")
      button(type = "button" class="btn__block btn__block_border ")
        a.btn__link(href=obj.link)= obj.text
        if obj.arrow == true
          .btn__arrow.btn__arrow_white
      div(class='btn__border ' + btn__border_hover)
  else
    div(class="btn btn_gradient " + hover)
      button(type = "button" class="btn__block btn__block_gradient " + arrow)
        a.btn__link(href=obj.link)= obj.text
        if obj.arrow == true
          .btn__arrow.btn__arrow_white