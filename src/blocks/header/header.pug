include ~@Blocks/btn/btn.pug

mixin header(obj,...items)
  - let active
  - let expand
  header.header
    .header__content-container
      a.header__logo-link(href="./landing-page.html")
        img.header__logo(src=require("@Blocks/header/img/logo.svg").default alt="logo")
      .header__menu-mobile
      .header__links.header__links_hidden
        nav.header__block-menu
          ul.header__menu
            each item in items
              if item.state == "active"
                - active = "header__menu-li_active";
              else
                - active = "";
              if item.type == "expand"
                - expand = "header__menu-li_expand";
              else
                - expand = "";
              li(class="header__menu-li " +active+" "+expand)
                a.header__menu-a(href= item.link)= item.menuItem
                if item.submenu != false
                  ul.header__submenu.header__submenu-hide
                    each sbm in item.submenu
                      li.header__submenu-li
                        a.header__submenu-a(href= sbm.link)= sbm.menuItem
        .header__block-login
          if obj.authorization == false
            .header__btn.header__btn_border
              +btn(
                {
                  text : "Войти",
                  link : "./sign-in.html",
                  arrow : false,
                  border: true,
                  hover: false
                }
              )
            .header__btn.header__btn_gradient
              +btn(
                {
                  text : "Зарегистрироваться",
                  link : "./registration.html",
                  arrow : false,
                  border: false,
                  hover: false
                }
              )
          else
            .header__block-login-hr
            p= obj.name