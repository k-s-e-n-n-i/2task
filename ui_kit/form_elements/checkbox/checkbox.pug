mixin checkbox_item(label,id,p,dopclass)
  if p ==""
    div.checkbox_item
      input.checkbox_item_input(id="check" + id type="checkbox")
      label.checkbox_item_label(for="check" + id)= label
  else
    div.checkbox_item
      input.checkbox_item_input(id="check" + id type="checkbox")
      label.checkbox_item_label.checkbox_item_label__bold(for="check" + id)= label
      p(class=dopclass)= p