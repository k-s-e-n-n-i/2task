include /blocks/elements/link/link.pug
include /blocks/elements/dropdown/dropdownBlock.pug
include /blocks/elements/dropdown/dropdownDates.pug
include /blocks/elements/btn/btn.pug

mixin formReservation(number,priceS,price)
  div.form-reservation
    div.form-reservation__block
      p
        span= "№ "
        span= number +" "
        +link(
          {
            text : "люкс",
            url : '#',
            type : "lux"
          }
          )
      p
        span= priceS
        span= "₽"
        span= " в сутки"
          
    +dropdownDates(
      {
        btnClean : false,
        btnOk : false
      },
      { 
        topic : "Прибытие",
        activeText : "19.08.2019",
      },
      { 
        topic : "Выезд",
        activeText : "23.08.2019",
      }
      ) 
    
    +dropdownBlock(
      { 
        topic : "Гости",
        label : "",
        activeText : "3 гостя",
        state : "close",
        btnClean : true,
        btnOk : true
      },
      {
        text : "взрослые",
        qty : 3,
        minus : "active",
        plus : "active"
      },
      {
        text : "дети",
        qty : 0,
        minus : "disable",
        plus : "active"
      },
      {
        text : "младенцы",
        qty : 0,
        minus : "disable",
        plus : "active"
      }    
      )  
    
    +formReservation__blockPrices(
      {
        textPrice : "9 990₽ х 4 суток",
        sumPrice : "39 960",
        iconInfo : false
      },
      {
        textPrice : "Сбор за услуги: скидка 2 179₽",
        sumPrice : "0",
        iconInfo : true
      },
      {
        textPrice : "Сбор за доп. услуги",
        sumPrice : "300",
        iconInfo : true
      }
      )

    div.form-reservation__block
      h2= "Итого"
      span.form-reservation__dashed
      h2= price +"₽"

    +btn(
      {
        text : "Забронировать",
        dopclass : "btn_gradient btn_gradient_pay",
        link : "#",
        arrow : true
      }
      )


mixin formReservation__blockPrices(...items)
  div.form-reservation__block-prices
    each item in items
      div.form-reservation__line-price
        div.form-reservation__text-price
          p= item.textPrice
          if item.iconInfo == true
            div.form-reservation__icon-info-price i
        p= item.sumPrice +"₽"