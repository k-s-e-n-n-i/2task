mixin toggle(name,text,boolean)
  div.toggle__flex
    div.toggle
      div.toggle_item
        if boolean=="off"
          input.toggle_item_input(id=name+"1" type="radio" name=name checked)
        else
          input.toggle_item_input(id=name+"1" type="radio" name=name)
        label.toggle_item_label.off(for=name+"1")
      div.toggle_item
        if boolean=="on"
          input.toggle_item_input(id=name+"2" type="radio" name=name checked)
        else
          input.toggle_item_input(id=name+"2" type="radio" name=name)
        label.toggle_item_label.on(for=name+"2")
    p= text